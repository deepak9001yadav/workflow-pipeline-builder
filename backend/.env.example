# Environment Configuration for Backend
# Copy this to .env and fill in your actual values
# NEVER commit .env to version control

# Application Settings
APP_NAME=Pipeline API
APP_ENV=production
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings (UPDATE FOR PRODUCTION)
# Replace * with your actual frontend domain for security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Security
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# Database (if you add one later)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# API Rate Limiting (requests per minute)
RATE_LIMIT=100

# Logging
LOG_LEVEL=INFO
